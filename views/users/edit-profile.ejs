<main class="container container-form no-padding">
  <h1><%- title %></h1>

  <form class="default-form" action="/edit-profile" method="post">
      <div class="campo">
          <label>Name</label>
          <input type="text" name="name" value="<%- user.name %> ">
      </div>
      <div class="campo description">
          <label>Who I am</label>
          <div class="container-editor">
              <input type="hidden" id="description" name="description" value="<%- user.description %> ">
              <trix-editor input="description"></trix-editor>
          </div>
      </div>
      <div class="campo">
          <label>E-mail</label>
          <input type="email" name="email" value="<%- user.email %> ">
      </div>
      <div class="campo send">
          <input type="submit" class="btn btn-pink" value="Save Changes">
      </div>
  </form>
</main>