<main class="container container-form no-padding">
  <h1>
    <%- title %>
  </h1>

  <form class="default-form" action="/change-password" method="post">
    <div class="campo">
      <label>Current Password</label>
      <input type="password" name="current" placeholder="Current Password">
    </div>

    <div class="campo">
      <label>New Password</label>
      <input type="password" name="new" placeholder="New Password">
    </div>
    <div class="campo send">
      <input type="submit" class="btn btn-pink" value="Change Password">
    </div>
  </form>
</main>