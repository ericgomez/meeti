<div class="card">
  <% if(meeti.group.image) { %> 
    <img src="/uploads/groups/<%- meeti.group.image %>" alt="<%- meeti.title %>">
  <% } else { %>
    <img src="/img/logo.png" alt="meeti-default">
  <% } %>
  <div class="card-text">
    <p class="date"><%- moment(`${meeti.date} ${meeti.time}`).format('LLLL') %> </p>
    <a href="/meeti/<%- meeti.slug %>">
      <h3><%- meeti.title %></h3>
    </a>
    <div class="info-author">
      <% if (meeti.user.image) { %>
        <div class="image">
          <img src="/uploads/profiles/<%- meeti.user.image %>">
        </div>
      <% } else { %>
        <div class="image">
        </div>
      <% } %>
      <div class="information">
        <p>Organized by:</p>
        <p class="author"><%- meeti.user.name %></p>
      </div>
    </div>

  </div>
</div>